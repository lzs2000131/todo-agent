{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Todo Agent",
  "version": "1.0.0",
  "identifier": "com.todoagent.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "category": "Productivity",
    "shortDescription": "智能待办事项管理应用",
    "longDescription": "Todo Agent是一款智能待办事项管理应用,支持截图识别、云端同步、智能提醒等功能"
  },
  "app": {
    "windows": [
      {
        "title": "Todo Agent - 智能待办管理",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:todos.db"]
    },
    "globalShortcut": {
      "shortcuts": {
        "screenshot": "CmdOrCtrl+Shift+E"
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/yourusername/todo-agent/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
